   <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
<!--  CONTENT GOES HERE -->

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


         <RelativeLayout
             android:layout_gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatis531"
            android:textColor="@color/material_indigo"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatis531Q" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatis531Answer"
            android:textColor="@color/white"
            android:layout_below="@id/whatis531Q"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatis531A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatisTrainingMax"
            android:layout_below="@id/whatis531A"
            android:textColor="@color/material_indigo"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatisTM" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatisTrainingMaxAnswer"
            android:textColor="@color/white"
            android:layout_below="@id/whatisTM"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatisTMA" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatisCycle"
            android:layout_below="@id/whatisTMA"
            android:textColor="@color/material_indigo"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatisCycle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatisCycleAnswer"
            android:textColor="@color/white"
            android:layout_below="@id/whatisCycle"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatisCycleA" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatiffailedlift"
            android:layout_below="@id/whatisCycleA"
            android:textColor="@color/material_indigo"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatifFailedLift" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_whatiffailedliftanswer"
            android:textColor="@color/white"
            android:layout_below="@id/whatifFailedLift"
            android:gravity="center"
            android:layout_gravity="center_horizontal|top"
            android:textSize="21dp"
            android:id="@+id/whatifFailedLiftA" />
         </RelativeLayout>

</ScrollView>


    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp"
        android:background="#d6d6d6"/>
</android.support.v4.widget.DrawerLayout>
